<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan to Connect"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other devices can scan this QR code to watch your camera stream"
        android:textSize="14sp"
        android:layout_marginBottom="24dp"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/qr_code_image"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/white"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/connection_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connection ID: Loading..."
        android:textSize="12sp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/darker_gray"
        android:fontFamily="monospace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”´ LIVE - Camera streaming is active"
        android:textSize="12sp"
        android:layout_marginBottom="16dp"
        android:textColor="#FF4444"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/button_share"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/button_close"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close" />

    </LinearLayout>

</LinearLayout>